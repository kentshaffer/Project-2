<section class='card'>
  <div class='card-body'>
    <div
      class='d-grid gap-2 d-md-flex justify-content-between'
      id='{{id}}'
    >{{todo_name}}
      <div class="checkmark">{{#unless todo_open}}✔️{{/unless}}</div>
      {{#if todo_open}}<input
          class='btn btn-primary btn-custom complete-todo-btn'
          type='submit'
          value='Complete'
          id="todo-btn"
        />{{/if}}</div>
  </div>
</section>
